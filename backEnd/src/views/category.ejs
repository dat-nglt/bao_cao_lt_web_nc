<div style="display: flex; padding: 10px; justify-content: flex-end; align-items: center; gap: 10px;">
<button type="button" style="padding: 5px 12px;" class="btn btn-primary" data-toggle="modal" data-target="#addModal">
    Thêm thể loại
  </button>
 
    <form style="display: flex;" class="form-inline my-2 my-lg-0">
      <div class="dropdown mr-2">
        <button style="padding: 5px 12px;" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Bộ lọc
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <div class="dropdown-item">Mới nhất</div>
          <div class="dropdown-item">Cũ nhất</div>
        </div>
      </div>
        <input class="form-control mr-sm-1" type="search" placeholder="Tìm tên thể loại" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
</div>

<table class="table" style="height: fit-content;">
  <thead>
    <tr>
      <th scope="col" style="width: 5%;">STT</th>
      <th scope="col" style="width: 30%;">Tên thể loại</th>
      <th scope="col" style="width: 48%;">Mô tả</th>
      <th scope="col" style="width: 7%;">SL sách</th>
      <th scope="col" style="width: 10%;">Tùy chọn</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i=0; i<data.row.length; i++){ %>
      <tr>
        <th scope="row"><%= i+1%></th>
        <td class="text_truncate" style="max-width: 110px;">
          <%= data.row[i].name %>
        </td>
        <td class="text_truncate" style="max-width: 200px;">
          <%= data.row[i].description %>
        </td>
        <td class="d-flex justify-content-center">3</td>
        <td class="operation_group">
          <i class="fa-solid fa-pen-to-square" data-toggle="modal" data-target="#editModal"></i>
          <i class="fa-solid fa-eye"></i>
          <i class="fa-solid fa-trash-can" data-toggle="modal" data-target="#deleteModal" data-id="<%= data.row[i].id %>"></i>
        </td>
      </tr>
      <% }%>
  </tbody>
</table>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-end">
    <li class="page-item"><a class="page-link" href="#"><i class="fa-solid fa-angles-left"></i></a></li>
    <li class="page-item"><a class="page-link" href="#"><i class="fa-solid fa-angle-left"></i></a></li>
    <li class="page-item"><a class="page-link" href="#">4</a></li>
    <li class="page-item"><a class="page-link" href="#">5</a></li>
    <li class="page-item"><a class="page-link" href="#">6</a></li>
    <li class="page-item"><a class="page-link" href="#">7</a></li>
    <li class="page-item"><a class="page-link" href="#"><i class="fa-solid fa-angle-right"></i></a></li>
    <li class="page-item"><a class="page-link" href="#"><i class="fa-solid fa-angles-right"></i></a></li>
  </ul>
</nav>
<script>
  document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('.fa-pen-to-square').forEach(item => {
          item.addEventListener('click', function() {
              const row = this.closest('tr');
              const tenTheLoai = row.cells[1].innerText;
              const moTa = row.cells[2].innerText;
              document.getElementById('categoryName').value = tenTheLoai;
              document.getElementById('description').value = moTa;
          });
      });
      document.getElementById('saveChanges').addEventListener('click', function() {
          $('#editModal').modal('hide');
      });

      document.querySelectorAll('.fa-trash-can').forEach(item => {
          item.addEventListener('click', function() { 
              const deleteId = this.getAttribute('data-id');

              document.getElementById('confirmDelete').onclick = function() {
                $('#deleteModal').modal('hide');
                fetch(`/the-loai/${deleteId}`, {
                    method: 'DELETE',
                })
                .then(response => {
                    console.log(response);
                    if (response.ok) {
                        alert("Xóa thành công");
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra khi xóa thể loại.');
                    }
                })
                .catch(error => {
                    console.error(error);
                });
            };
          });
      });
  });
</script>

<!-- thêm -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addModalLabel">Thêm thể loại</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="post" action="/the-loai">
          <div class="form-group">
            <label for="category_name">Tên thể loại</label>
            <input type="text" class="form-control" name="name" id="category_name" placeholder="Nhập tên..." required>
          </div>
          <div class="form-group">
            <label for="category_description">Mô tả thể loại</label>
            <textarea class="form-control" spellcheck="false" style="resize: none;" placeholder="Nhập mô tả..." name="description" id="category_description" rows="5" required></textarea>
          </div>
          <div class="modal-footer" style="border: none;">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            <button type="submit" class="btn btn-success">Thêm</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- sửa -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="editModalLabel">Chỉnh sửa thông tin</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <div class="modal-body">
              <p id="modal-description"></p>
              <form id="editForm">
                  <div class="form-group">
                      <label for="categoryName">Tên thể loại</label>
                      <input type="text" class="form-control" id="categoryName" required>
                  </div>
                  <div class="form-group">
                      <label for="description">Mô tả</label>
                      <textarea class="form-control" id="description" rows="5" style="resize: none;" spellcheck="false" required></textarea>
                  </div>
              </form>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
              <button type="button" class="btn btn-primary" id="saveChanges">Lưu thay đổi</button>
          </div>
      </div>
  </div>
</div>

<!-- xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <div class="modal-body">
              Bạn có chắc chắn muốn xóa không?
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
              <button type="button" class="btn btn-danger" id="confirmDelete">Xóa</button>
          </div>
      </div>
  </div>
  </div>

